@using ParcialP3.Application.ViewModels.TipoPropiedad
@model IEnumerable<TipoPropiedadViewModel>

@{
    ViewData["Title"] = "Tipos de propiedad";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0"><i class="bi bi-building"></i> Lista de tipos de propiedad</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo tipo de propiedad
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.DESCRIPCION)</th>
                    <th>@Html.DisplayNameFor(model => model.Activo)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.DESCRIPCION)</td>
                            <td>@Html.DisplayFor(modelItem => item.Activo)</td>
                            <td class="text-center">
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm me-1", @title = "Editar" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm", @title = "Eliminar" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>