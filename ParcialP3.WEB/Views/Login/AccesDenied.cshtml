@inject ParcialP3.Application.Interfaces.IUserSeccion userSession;

@{
    UsersViewModel? user = userSession.GetUserSeccion();
    bool isAdmin = true;
    if (user.idEstatus == (int)UserEnums.active)
    {
        Layout = "_Layout";
    }
    ViewData["Title"] = "AccesDenied";
    Layout = "_LayoutAnonymous";
}

<div class="text-center">
    <h1 class="display-4">Acces Denied</h1>
    <p>No tienes acceso a este apartado - <a asp-controller="@(isAdmin? "Home" : "InvestorHome")" asp-action="Index">Volver al home</a></p>
</div>
