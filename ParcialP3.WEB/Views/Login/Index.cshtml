@using ParcialP3.Application.ViewModels.Users
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutAnonymous";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-12 col-md-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-person-circle"></i> Iniciar Sesión</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Login" asp-action="Index" method="POST">
                        <div class="mb-3">
                            <label asp-for="Usuario" class="form-label"><i class="bi bi-person"></i> Usuario</label>
                            <input class="form-control" asp-for="Usuario" placeholder="Ingresa tu usuario" autofocus />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"><i class="bi bi-lock"></i> Contraseña</label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Ingresa tu contraseña" autocomplete="current-password" />
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-controller="Login" asp-action="Register" class="btn btn-outline-warning">
                                <i class="bi bi-person-plus"></i> Registrarse
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Entrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
