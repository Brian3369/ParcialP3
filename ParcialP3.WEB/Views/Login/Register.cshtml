@model RegisterUsersViewModel

@{
    ViewData["Title"] = "Register User";
    Layout = "_LayoutAnonymous";
}
<br />
<br />
<br />

<div class="col-12 col-md-6 offset-md-3 ">
    <div class="card">
        <div class="card-header bg-success text-light"><h5 class="text-center">New User</h5></div>
        <div class="card-body">
            <form asp-controller="Login" asp-action="Register" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre:</label>
                    <input class="form-control" asp-for="Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Usuario" class="form-label">Usuario:</label>
                    <input class="form-control" asp-for="Usuario" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email:</label>
                    <input type="email" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Edad" class="form-label">Edad:</label>
                    <input type="Edad" class="form-control" asp-for="Edad" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password:</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirnPassword" class="form-label">Confirn Password:</label>
                    <input type="password" class="form-control" asp-for="ConfirnPassword" />
                    <span asp-validation-for="ConfirnPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input hidden class="form-control" asp-for="idEstatus" value="1"/>
                </div>
                <div>
                    <button type="submit" class="btn btn-outline-primary float-end"><i class="bi bi-floppy2"></i> Save</button>
                    <a asp-controller="Login" asp-action="Index" class="btn btn-outline-warning float-end me-2"><i class="bi bi-arrow-left-short"></i> Back to login</a>
                </div>
            </form>
        </div>
    </div>
</div>
