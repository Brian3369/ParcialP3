@using ParcialP3.Application.ViewModels.Users
@model RegisterUsersViewModel

@{
    ViewData["Title"] = "Registro de Usuario";
    Layout = "_LayoutAnonymous";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-12 col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-person-plus"></i> Registro de Usuario</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Login" asp-action="Register" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"><i class="bi bi-person"></i> Nombre</label>
                            <input class="form-control" asp-for="Nombre" placeholder="Ingresa tu nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Usuario" class="form-label"><i class="bi bi-person-badge"></i> Usuario</label>
                            <input class="form-control" asp-for="Usuario" placeholder="Nombre de usuario" />
                            <span asp-validation-for="Usuario" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"><i class="bi bi-envelope"></i> Email</label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="ejemplo@correo.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Edad" class="form-label"><i class="bi bi-calendar"></i> Edad</label>
                            <input type="number" class="form-control" asp-for="Edad" min="0" placeholder="Edad" />
                            <span asp-validation-for="Edad" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"><i class="bi bi-lock"></i> Contraseña</label>
                            <input type="password" class="form-control" asp-for="Password" autocomplete="new-password" placeholder="Contraseña" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirnPassword" class="form-label"><i class="bi bi-lock-fill"></i> Confirmar Contraseña</label>
                            <input type="password" class="form-control" asp-for="ConfirnPassword" autocomplete="new-password" placeholder="Repite la contraseña" />
                            <span asp-validation-for="ConfirnPassword" class="text-danger"></span>
                        </div>
                        <input hidden asp-for="idEstatus" value="1" />
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-controller="Login" asp-action="Index" class="btn btn-outline-warning">
                                <i class="bi bi-arrow-left-short"></i> Volver al login
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-floppy2"></i> Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

