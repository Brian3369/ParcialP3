@model IEnumerable<ParcialP3.Application.ViewModels.Inmuebles.InmueblesViewModel>

@{
    ViewData["Title"] = "Catálogo de inmuebles";
    var items = Model ?? Enumerable.Empty<ParcialP3.Application.ViewModels.Inmuebles.InmueblesViewModel>();
}

<div class="container py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="row g-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
        @foreach (var item in items)
        {
            var firstImg = (item.Imagenes != null && item.Imagenes.Any()) ? item.Imagenes[0] : null;
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(firstImg))
                    {
                        <img src="@firstImg"
                             alt="@item.NombreInmueble"
                             class="card-img-top"
                             style="height:200px; object-fit:cover;" />
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center text-muted"
                             style="height:200px;">
                            Sin imagen
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate" title="@item.NombreInmueble">@item.NombreInmueble</h5>
                        <p class="card-text fw-bold text-primary mb-3">
                            @item.Precio.ToString("C")
                        </p>
                        <button class="btn btn-outline-primary mt-auto"
                                data-bs-toggle="modal"
                                data-bs-target="#inmuebleModal-@item.Id">
                            Ver detalles
                        </button>
                    </div>
                </div>
            </div>

            <!-- Modal de detalles con carrusel -->
            <div class="modal fade" id="inmuebleModal-@item.Id" tabindex="-1" aria-labelledby="inmuebleModalLabel-@item.Id" aria-hidden="true">
                <div class="modal-dialog modal-xl modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="inmuebleModalLabel-@item.Id">
                                @item.NombreInmueble - @item.Precio.ToString("C")
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row g-3">
                                <div class="col-md-7">
                                    @if (item.Imagenes != null && item.Imagenes.Any())
                                    {
                                        var imgCount = item.Imagenes.Count;
                                        <div id="carousel-@item.Id" class="carousel slide" data-bs-ride="carousel">
                                            @if (imgCount > 1)
                                            {
                                                <div class="carousel-indicators">
                                                    @for (int i = 0; i < imgCount; i++)
                                                    {
                                                        <button type="button"
                                                                data-bs-target="#carousel-@item.Id"
                                                                data-bs-slide-to="@i"
                                                                class="@(i == 0 ? "active" : "")"
                                                                aria-current="@(i == 0 ? "true" : "false")"
                                                                aria-label="Slide @(i + 1)"></button>
                                                    }
                                                </div>
                                            }
                                            <div class="carousel-inner">
                                                @for (int i = 0; i < imgCount; i++)
                                                {
                                                    var url = item.Imagenes[i];
                                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                                        <img src="@url" class="d-block w-100" alt="Foto @(i + 1)"
                                                             style="max-height: 500px; object-fit: cover;" />
                                                    </div>
                                                }
                                            </div>
                                            @if (imgCount > 1)
                                            {
                                                <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@item.Id" data-bs-slide="prev">
                                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                    <span class="visually-hidden">Anterior</span>
                                                </button>
                                                <button class="carousel-control-next" type="button" data-bs-target="#carousel-@item.Id" data-bs-slide="next">
                                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                    <span class="visually-hidden">Siguiente</span>
                                                </button>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center text-muted"
                                             style="height:500px;">
                                            Sin imágenes disponibles
                                        </div>
                                    }
                                </div>
                                <div class="col-md-5">
                                    <div class="mb-2"><span class="text-muted">Precio:</span> <span class="fw-bold">@item.Precio.ToString("C")</span></div>
                                    <dl class="row mb-0">
                                        <dt class="col-5 col-sm-4">Dirección</dt>
                                        <dd class="col-7 col-sm-8">@item.Direccion</dd>

                                        <dt class="col-5 col-sm-4">Tipo propiedad</dt>
                                        <dd class="col-7 col-sm-8">@item.TipoPropiedad</dd>

                                        <dt class="col-5 col-sm-4">Condición</dt>
                                        <dd class="col-7 col-sm-8">@item.Condicion</dd>

                                        <dt class="col-5 col-sm-4">Ciudad</dt>
                                        <dd class="col-7 col-sm-8">@item.Ciudades</dd>

                                        <dt class="col-5 col-sm-4">Habitaciones</dt>
                                        <dd class="col-7 col-sm-8">@((item.Habitacion.HasValue) ? item.Habitacion.Value.ToString() : "N/A")</dd>

                                        <dt class="col-5 col-sm-4">Baños</dt>
                                        <dd class="col-7 col-sm-8">@item.Baños</dd>

                                        <dt class="col-5 col-sm-4">Tipo negocio</dt>
                                        <dd class="col-7 col-sm-8">@item.TipoNegocio</dd>

                                        <dt class="col-5 col-sm-4">Activo</dt>
                                        <dd class="col-7 col-sm-8">@((item.Activo) ? "Sí" : "No")</dd>
                                    </dl>
                                    <div class="mt-3">
                                        <div class="text-muted">Descripción</div>
                                        <div>@item.Descripcion</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>